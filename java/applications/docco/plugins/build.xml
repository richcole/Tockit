<?xml version="1.0" encoding="UTF-8"?>
<project name="Deploy Plugins" default="dist" basedir=".">
	<description>
		Compile and deploy all plugins
	</description>

	<!-- TODO have to change the way we get Docco stuff -->
	<property name="docco.libs.dir" value="../libs"/>
	<property name="docco.classes" value="../build/release"/>
	<property name="docco.dist.dir" value="../dist"/>
	
	
	<property name="plugins.dist.dir" value="${docco.dist.dir}/plugins"/>

	<taskdef resource="net/sf/antcontrib/antcontrib.properties">
	  <classpath>
	    <pathelement location="${docco.libs.dir}/ant-contrib.jar"/>
	  </classpath>
	</taskdef>

	<path id="${plugins.paths}">
        <dirset dir="${basedir}">
			<patternset>
				<include name="*"/>
			</patternset>	        
        </dirset>
	</path>	

	<target name="clean">
	    <foreach target="_cleanPlugin" param="plugin.dir">
	    	<path refid="${plugins.paths}"/>
		</foreach>
	</target>
	
	<target name="dist">
		<mkdir dir="${plugins.dist.dir}"/>
	    <foreach target="_pluginDist" param="plugin.dir">
	    	<path refid="${plugins.paths}"/>
	    </foreach>
	</target>
	
	<target name="_pluginDist">
		<basename property="plugin.dir.name" file="${plugin.dir}"/>
		<ant antfile="${basedir}/buildPlugin.xml" dir="${plugin.dir}" target="dist" inheritall="false">
			<property name="plugin.name" value="${plugin.dir.name}Plugin"/>
			<property name="docco.classes" value="../${docco.classes}"/>
		</ant>
		<mkdir dir="${plugins.dist.dir}/${plugin.dir.name}"/>
		<copy todir="${plugins.dist.dir}/${plugin.dir.name}">
			<fileset dir="${plugin.dir}/dist"/>
		</copy>
	</target>
	
	<target name="_cleanPlugin">
		<ant antfile="${basedir}/buildPlugin.xml" dir="${plugin.dir}" target="clean">
			<property name="plugin.name" value="${plugin.dir}Plugin"/>
		</ant>
	</target>	

</project>